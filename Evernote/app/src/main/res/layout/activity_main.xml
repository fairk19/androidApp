<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#aaaaaa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="ru.mail.app.MainActivity$PlaceholderFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <Button
        style="@style/buttonClass"
        android:text="@string/action_login"
        android:id="@+id/login"
        android:onClick="login"
        android:layout_above="@+id/createNote"/>

    <Button
        style="@style/buttonClass"
        android:layout_width="match_parent"
        android:text="@string/btn_to_start_adding_note_activity"
        android:id="@+id/createNote"
        android:onClick="startNoteAddingActivity"
        android:layout_above="@+id/logout"
        android:layout_centerHorizontal="true"
        />

    <Button
        style="@style/buttonClass"
        android:layout_width="match_parent"
        android:text="@string/action_logout"
        android:id="@+id/logout"
        android:onClick="logout"
        android:layout_alignParentBottom="true"
        />


    <GridView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:numColumns="2"
        android:id="@+id/gridView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        />


</RelativeLayout>

