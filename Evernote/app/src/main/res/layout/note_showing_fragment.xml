<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#2dbe60"
        android:textColor="#2dbe60"
        android:textSize="30dp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_below="@id/tvTitle"
        android:layout_margin="10dp"
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        style="@style/buttonClass"
        android:text="@string/btn_edit_note"
        android:layout_above="@+id/delete"
        android:onClick="btnEditClick"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button" />
    <Button
        style="@style/buttonClass"
        android:text="@string/btn_delete_note"
        android:onClick="btnDeleteClick"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>