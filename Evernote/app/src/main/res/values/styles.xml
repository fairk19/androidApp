<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/action_bar_color</item>
    </style>

    <style name="buttonClass" parent="android:Theme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/login_states_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">1pt</item>
        <item name="android:layout_marginBottom">1pt</item>
        <item name="android:layout_marginLeft">25pt</item>
        <item name="android:layout_marginRight">25pt</item>
    </style>

    <style name="buttonClass2" parent="android:Theme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="buttonClassTop">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#2dbe60</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="panel_add_text">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="leftMenuItemStyle">
        <item name="android:background">@drawable/for_left_menu_item</item>
    </style>

    <style name="leftMenuTextStyle">
        <item name="android:textColor">@color/main_green_color</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="leftMenuIcoStyle">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    
</resources>
