<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#2dbe60"
    tools:context="ru.mail.app.MainActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/img_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Remember\nEverything"
        android:textColor="#ffffff"
        android:textSize="32dp"
        android:fontFamily="roboto-slab-light"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/editText"
        android:inputType="text"
        android:hint="Email or Username"
        android:background="#57cb80"
        android:textColor="#1a7e4d"
        android:textSize="18dp"
        android:fontFamily="roboto-light"
        android:paddingLeft="32dp"
        android:paddingBottom="18dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:id="@+id/editText2"
        android:inputType="textPassword"
        android:hint="Password"
        android:background="#57cb80"
        android:textColor="#1a7e4d"
        android:textSize="18dp"
        android:fontFamily="roboto-light"
        android:paddingLeft="32dp"
        android:paddingBottom="18dp"
        android:layout_below="@+id/editText"
        android:layout_marginTop="1dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:text="SIGN IN"
        android:textColor="#76c180"
        android:textSize="16dp"
        android:id="@+id/login"
        android:onClick="login"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/login_states_button"
        />
</RelativeLayout>
